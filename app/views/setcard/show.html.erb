<div class="container">
  <h1>SetCard</h1>
  <div class="row">
    <div class="col-sm-3">
      <ul class="list-group">
        <li class="list-group-item"><strong>MODEL INFORMATION</strong> <%= link_to ('<i class="fa fa-pencil"></i>').html_safe, edit_user_registration_path, title: 'Edit Profile' %></li>
        <li class="list-group-item"><strong>Name:</strong> <%= @user.full_name %></li>
        <li class="list-group-item"><strong>Age:</strong> <%= @user.age %></li>
        <li class="list-group-item"><strong>Nationality:</strong> <%= @user.nationality %></li>
        <li class="list-group-item"><strong>Height:</strong> <%= @user.height %></li>
        <li class="list-group-item"><strong>Bust:</strong> <%= @user.bust %></li>
        <li class="list-group-item"><strong>Waist:</strong> <%= @user.waist %></li>
        <li class="list-group-item"><strong>Hips:</strong> <%= @user.hips %></li>
        <li class="list-group-item"><strong>Eye Color:</strong> <%= @user.eye_color %></li>
        <li class="list-group-item"><strong>Hair Color:</strong> <%= @user.hair_color %></li>
        <li class="list-group-item"><strong>Shoe Size:</strong> <%= @user.shoe_size %></li>
      </ul>
    </div>
    <div class="my-setcard-images col-sm-9">
      <div class="row">
        <%= link_to "Add Card",
            new_image_path,
            :class => 'btn btn-primary btn-sm' %>
      </div>
      <div class="row">
        <% if @images.size > 0 %>
            <% @images.each do |image| %>
                <div class="card">
                  <div class="card-body">
                     <%= link_to ('<i class="fa fa-times"></i>').html_safe,
                      image_path(image),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'pull-right' %>
                  </div>
                  <%= image_tag image.picture.url, size: "260x260", class: "card-img-top" %>
                </div>
          <% end %>
        <% else %>
            <h1 class="text-center">You don't have cards yet! Please add some so clients would notice you!</h1>
        <% end %>
      </div>
    </div>
  </div>
</div>


